{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build current crate",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path",
                "${fileDirname}/../Cargo.toml"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}